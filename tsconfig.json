{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
